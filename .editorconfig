root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.java]
indent_style = space
indent_size = 4

[*.gradle]
indent_style = space
indent_size = 4

[*.properties]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.yml]
[*.yaml]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 2

[*.sh]
[*.bat]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.js]
[*.ts]
indent_style = space
indent_size = 2
